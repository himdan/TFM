{% extends 'layout/layout.html.twig' %}

{% block body %}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Modifier l'article " {{ article.nomArticle }} "</h2>
        <ol class="breadcrumb">

        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{ article.nomArticle }}</h5>

                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="well well-sm">

                                {{ form_start(edit_form) }}
                                <div class="form-group"><label>Titre de l'article</label>
                                    {{ form_widget(edit_form.nomArticle) }}
                                </div>
                                <div class="form-group"><label>Langue</label>
                                    {{ form_widget(edit_form.langue) }}
                                </div>
                                <div class="form-group"><label>Topic</label>
                                    {{ form_widget(edit_form.topic) }}
                                </div>
                                <div class="form-group"><label>type</label>
                                    {{ form_widget(edit_form.typeArticle) }}
                                </div>
                                <div class="form-group"><label>Image de couverture</label>
                                    {{ form_widget(edit_form.image) }}
                                </div>
                                <div class="form-group"><label>Description de l'article</label>
                                    {{ form_widget(edit_form.descriptionArticle) }}
                                </div>
                                <div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button class="btn btn-sm btn-primary pull-right m-t-n-xs btn-block" type="submit"><strong>Modifier</strong></button>
                                        </div>
                                        {{ form_end(edit_form) }}
                                        <div class="col-md-6">
                                            {{ form_start(delete_form) }}
                                            <button class="btn btn-sm btn-danger pull-right m-t-n-xs btn-block" type="submit"><strong>Supprimer</strong></button>
                                            {{ form_end(delete_form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
