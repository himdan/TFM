{% extends 'layout/layout.html.twig' %}
{% block body %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox">
                    <div class="ibox-content">

                        <h2>Liste des etablissements
                            <a href="{{ path('etablissement_new') }}">
                                <button class="btn btn-sm btn-danger">Ajouter nouveau etablissement</button>
                            </a>
                        </h2>
                        <div class="clients-list">
                            <div class="tab-content">


                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <tbody>
                                                <tr>
                                                    <td class="client-avatar"><i class="fa fa-list" aria-hidden="true"></i>
                                                    </td>

                                                    <td align="center" class="client-link">Image</td>
                                                    <td align="center" class="client-link">Nom</td>

                                                    <td align="center" class="client-link">Gouvernorat</td>
                                                    <td align="center" class="client-link">Region</td>
                                                    <td align="center" class="client-link">Email</td>
                                                    <td align="center" class="client-link">Autorisation</td>
                                                    <td align="center" class="client-link">Sponsorisation</td>

                                                    <td align="center" class="client-link"> Operation</td>
                                                </tr>
                                                {% for eta in etablissements %}
                                                    <tr>
                                                        <td class="client-avatar"><i class="fa fa-list" aria-hidden="true"></i>
                                                        </td>

                                                        <td align="center"><img src="{{ asset(eta.image.WebPath) }}" class="img-responsive img-thumbnail" style="width: 100px;height: 100px;"> </td>
                                                        <td align="center">{{ eta.nomEtablissement }}</td>

                                                        <td align="center">{{ eta.gouvernorat }}</td>
                                                        <td align="center">{{ eta.region }}</td>
                                                        <td align="center">{{ eta.emailEtablissement }}</td>
                                                        <td align="center">
                                                            {% if eta.autorisationEtablissement == 'desactive' %}
                                                                <div class="label label-danger"> {{ eta.autorisationEtablissement }}</div>
                                                            {% else %}
                                                                <div class="label label-primary">{{ eta.autorisationEtablissement }}</div>
                                                            {% endif %}
                                                        </td>
                                                        <td align="center">
                                                            {% if eta.sponsorEtablissement == 'desactive' %}
                                                                <div class="label label-danger"> {{ eta.sponsorEtablissement }}</div>
                                                            {% else %}
                                                                <div class="label label-primary">{{ eta.sponsorEtablissement }}</div>
                                                            {% endif %}
                                                        </td>


                                                        <td align="center">
                                                            <a href="{{ path('etablissement_sponsor', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-success"><i class="fa fa-eur" aria-hidden="true"></i>
                                                                </button>
                                                            </a>
                                                            <a href="{{ path('etablissement_nonsponsor', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-danger"><i class="fa fa-eur" aria-hidden="true"></i>
                                                                </button>
                                                            </a>
                                                            <a href="{{ path('etablissement_autorisation', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-success"><i class="fa fa-unlock" aria-hidden="true"></i>
                                                                </button>
                                                            </a>
                                                            <a href="{{ path('etablissement_nonautorisation', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-danger"><i class="fa fa-lock" aria-hidden="true"></i>
                                                                </button>
                                                            </a>
                                                            <a href="{{ path('etablissement_show', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-info"><i class="fa fa-eye" aria-hidden="true"></i>
                                                                </button>
                                                            </a>
                                                            <a href="{{ path('etablissement_edit', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-info"><i class="fa fa-pencil" aria-hidden="true"></i>
                                                                </button>
                                                            </a>
                                                            <a href="{{ path('etablissement_album', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-primary"><i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp;Album</button>
                                                            </a>
                                                            <a href="{{ path('etablissement_carte', { 'id': eta.id }) }}">
                                                                <button class="btn btn-xs btn-primary"><i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp;Carte</button>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                            <div class="navigation">
                                                {{ knp_pagination_render(etablissements) }}
                                            </div>
                                        </div>


                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
