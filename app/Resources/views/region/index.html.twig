{% extends 'layout/layout.html.twig' %}
{% block body %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox">
                    <div class="ibox-content">

                        <h2>Liste des Regions
                            <a href="{{ path('region_new') }}">
                                <button class="btn btn-sm btn-danger">Ajouter nouvelle Region</button>
                            </a>
                        </h2>
                        <div class="clients-list">
                            <div class="tab-content">
                                <div id="tab-1" class="tab-pane active">
                                    <div class="full-height-scroll">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <tbody>
                                                <tr>
                                                    <td class="client-avatar"><i class="fa fa-list" aria-hidden="true"></i>
                                                    </td>

                                                    <td align="center" class="client-link">Nom Region</td>

                                                    <td align="center" class="client-link"> Gouvernorat</td>
                                                    <td align="center" class="client-link">
                                                        Operation
                                                    </td>
                                                </tr>
                                                {% for region in regions %}
                                                    <tr>
                                                        <td class="client-avatar"><i class="fa fa-list" aria-hidden="true"></i>
                                                        </td>

                                                        <td align="center">{{ region.nomRegion }}</td>

                                                        <td align="center"> <span class="label label-warning">{{ region.gouvernorat.nomGouvernorat }}</span></td>

                                                        <td align="center">
                                                            <a href="{{ path('region_edit', { 'id': region.id }) }}">
                                                                <button class="btn btn-xs btn-success">modifier</button>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
